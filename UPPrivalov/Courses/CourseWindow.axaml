<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UPPrivalov.CourseWindow"
        Title="CourseWindow">
    <Grid>
        <StackPanel>
            <DataGrid Name="CourseDataGrid" x:CompileBindings="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding CourseID}"/>
                    <DataGridTextColumn Header="Курс" Binding="{Binding CourseName}"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding CourseDesc}"/> 
                    <DataGridTextColumn Header="Язык" Binding="{Binding LanguageStudy}"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <Button HorizontalAlignment="Center" Margin="10" Click="Add">Добавить</Button>
            
            <Button HorizontalAlignment="Center" Margin="10" Click="Back">Back</Button>
            
        </StackPanel>
    </Grid>
</Window>
